@using libreriaAuth.Models
@model List<Direccion>
@{
    Layout = "";
}
<div class="form-check">
    @if (Model.Count>0)
    {
        <input class="form-check-input" checked="checked" type="radio" name="direccion" value="@Model[0].Id">
        <label class="form-check-label">
            @Model[0].direccionFormateada()
        </label>
        Model.RemoveAt(0);
    }
    @foreach (var item in Model)
    {
        <div>
            <input class="form-check-input" type="radio" name="direccion" value="@item.Id">
            <label class="form-check-label">
                @item.direccionFormateada()
            </label>
        </div>
    }
</div>
