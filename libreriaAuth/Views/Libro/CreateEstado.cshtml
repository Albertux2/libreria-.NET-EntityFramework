@model libreriaAuth.Models.libro.Estado

@{
}

@using (Html.BeginForm("CreateEstado", "Libro"))
{
    @Html.AntiForgeryToken()

    <form class="row mx-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mx-2">
            <label class="form-label m-0">Nombre estado</label>
            <div class="row col-md-8">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control col-2" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-2">
            <div class="col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </form>
}
